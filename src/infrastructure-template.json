{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "db_name": {
      "defaultValue": "",
      "type": "string"
    },
    "signup_db_name": {
      "defaultValue": "",
      "type": "string"
    },
    "failOverRegion": {
      "defaultValue": "",
      "type": "string"
    },
    "environment": {
      "defaultValue": "",
      "type": "string"
    },
    "db_admin": {
      "defaultValue": "",
      "type": "string"
    },
    "failover_db_admin_password": {
      "defaultValue": "",
      "type": "securestring"
    },
    "sqlServerName": {
      "defaultValue": "",
      "type": "string"
    },
    "failOverSqlServerName": {
      "defaultValue": "",
      "type": "string"
    },
    "sqlServerRG": {
      "defaultValue": "",
      "type": "string"
    },
    "primarydbID": {
      "defaultValue": "",
      "type": "string"
    },
    "signup_primarydbID": {
      "defaultValue": "",
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2015-05-01-preview",
      "name": "[parameters('failOverSqlServerName')]",
      "location": "[parameters('failOverRegion')]",
      "kind": "v12.0",
      "properties": {
        "administratorLogin": "adminuser",
        "version": "12.0",
        "administratorLoginPassword": "[parameters('failover_db_admin_password')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('failOverSqlServerName'),'/',parameters('db_name'))]",
      "location": "[parameters('failOverRegion')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('failOverSqlServerName'))]"
      ],
      "sku": {
        "name": "S1",
        "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 268435456000,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "readReplicaCount": 0,
        "createMode": "OnlineSecondary",
        "sourceDatabaseId": "[parameters('primarydbID')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-03-01-preview",
      "name": "[concat(parameters('failOverSqlServerName'),'/',parameters('signup_db_name'))]",
      "location": "[parameters('failOverRegion')]",
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('failOverSqlServerName'))]"
      ],
      "sku": {
        "name": "S1",
        "tier": "Standard"
      },
      "kind": "v12.0,user",
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 268435456000,
        "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
        "zoneRedundant": false,
        "readScale": "Disabled",
        "readReplicaCount": 0,
        "createMode": "OnlineSecondary",
        "sourceDatabaseId": "[parameters('signup_primarydbID')]"
      }
    }
  ]
}
